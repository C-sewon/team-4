#include<stdio.h>
#include<string.h>

int main() {
    char str[30] = "";
    int temp = 0;
    int flag = 0;
    int arr[100];
    int cnt = 0;

while(1){
    temp = 0; flag = 0; arr[100]; cnt = 0;
    printf("Enter an xpression >> ");
    gets_s(str);

    if(strcmp(str, "0") == 0){
        return 0;
    }



    for(int i = 0; i < strlen(str); i++){
    //세원님
           
        else if(str[i] == '+')
        {
            if(flag == 1)
            {
                arr[cnt++] = temp * -1;
            }
            else
            {
                arr[cnt++] = temp;
            }
            flag = 0;
            temp = 0;
        }
       else if(str[i]=='-'){
            if(flag==1){
                arr[cnt++]=temp *-1;
            }
            else{
                arr[cnt++]=temp;
            }
            flag=1;
            temp=0;
       }
        else{
            continue;
        }
    }
    if (flag == 1){
        arr[cnt++] = temp * -1;
    }
    else{
        arr[cnt++] = temp;
    }
    int result = 0;
    for (int i = 0; i < cnt; i++) {
        result += arr[i];
    }
    printf(" Value : %d\n\n", result);
    printf("\n\n");
}
}
